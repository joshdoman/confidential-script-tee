{
    "Sid": "Allow public use of the key by any account running the enclave",
    "Effect": "Allow",
    "Principal": {
        "AWS": "*"
    },
    "Action": [
        "kms:DeriveSharedSecret",
        "kms:DescribeKey"
    ],
    "Resource": "*",
    "Condition": {
        "StringEqualsIgnoreCase": {
            "kms:RecipientAttestation:PCR0": "INSERT_PCR_VALUE"
        }
    }
}